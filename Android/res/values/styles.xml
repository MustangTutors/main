<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
	<style name="MyCustomTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
        <item name="android:windowBackground">@color/Background</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>
    </style>

    <style name="MyActionBarTheme" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/DarkBlue</item>
        <item name="android:titleTextStyle">@style/MyTextAppearance</item>
    </style>
    
    <style name="MyTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
	    <item name="android:textColor">#ffffff</item>
	</style>
	
    <style name="NavigationDrawer">
        <item name="android:background">@color/DarkRed</item>
        <item name="android:divider">@color/DarkerRed</item>
    </style>
    
    <style name="NavigationDrawerItem">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    
    <style name="LoginFormPage">
        <item name="android:padding">30dp</item>
    </style>
    
    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/border</item>
    </style>
    
    <style name="Search">
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/Background</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">10dp</item>
    </style>
    
    <style name="SearchItem">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/border</item>
    </style>
    
    <style name="TutorPicture">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:padding">1.5dp</item>
        <item name="android:maxWidth">70dp</item>
        <item name="android:maxHeight">90dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/border_tutor</item>
    </style>
    
    <style name="TutorName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>
    
    <style name="TutorNumberRatings">
        <item name="android:layout_width">125sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">90dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>
    
    <style name="TutorAvailability">
        <item name="android:layout_width">100sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/border_unavailable</item>
    </style>
    
    <style name="StarGroup">
        <item name="android:layout_marginLeft">220dp</item>
        <item name="android:layout_marginTop">52dp</item>
    </style>
    <style name="Star">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">15dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    
    <style name="switchAvailability">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">-10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
