<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	style="@style/SearchItem">
	<ImageView
	    style="@style/TutorPicture"
	    android:layout_width="70dp"
	    android:layout_height="90dp"
	    android:id="@+id/search_tutor_picture"
	    android:src="@drawable/tutor" />
	<TextView
        style="@style/TutorAvailability"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/search_tutor_availability" />
    <TextView
        style="@style/TutorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/search_tutor_picture"
        android:id="@+id/search_tutor_name" />
    <TextView
        style="@style/TutorNumberRatings"
   		android:layout_width="135sp"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/search_tutor_name"
    	android:layout_toRightOf="@id/search_tutor_picture"
        android:id="@+id/search_tutor_number_ratings" />
    <TextView
        style="@style/NoRatings"
        android:id="@+id/search_tutor_no_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/search_tutor_number_ratings"
        android:layout_below="@id/search_tutor_name" />
    <RatingBar 
        style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/search_tutor_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/search_tutor_number_ratings"
        android:layout_below="@id/search_tutor_name"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:isIndicator="true" />
</RelativeLayout>



